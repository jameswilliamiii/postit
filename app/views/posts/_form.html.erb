<%= form_with(model: post, class: "contents") do |form| %>
  <% if post.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-lg mt-3">
      <h2><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
        <% post.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="relative z-0 w-full group my-5">
    <%= form.text_field :title, class: floating_label_input_class, placeholder: " " %>
    <%= form.label :title, class: floating_label_class %>
  </div>

  <div class="my-5">
    <%= form.label :message %>
    <%= form.rich_textarea :message, class: "block shadow rounded-md border border-gray-400 outline-none px-3 py-2 mt-2 w-full" %>
  </div>

  <div class="inline">
    <%= render RBUI::Button.new(type: :submit) { submit_text } %>
  </div>
<% end %>
