<div class="w-full">
  <% content_for :title, "Posts" %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Posts</h1>
    <%= render RBUI::Link.new(href: new_post_path, variant: :primary) { "New post" } %>
  </div>

  <div id="posts" class="min-w-full">
    <% @posts.each do |post| %>
      <%= render post %>
      <%= render RBUI::Link.new(href: post_path(post), variant: :outline) { "View post" } %>
    <% end %>
  </div>
</div>
